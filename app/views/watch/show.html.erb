<div class="row">
  <div class="col-sm-6 col-md-6">
    <div class="thumbnail">
      <img src="<%= @movie.poster %>" alt="">
      <div class="caption">
        <h3><%= @movie.title %> <small><%= @movie.year %></small></h3>
        <p><%= @movie.plot %></p>
        <p><a href="/watch" class="btn btn-primary" role="button">All Movies</a></p>
      </div>
    </div>
  </div>
</div>
