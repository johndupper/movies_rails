<div class="row">
    <% @movies.each do |movie| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= movie.poster %>" alt="">
          <div class="caption">
            <h3><%= movie.title %> <small><%= movie.year %></small></h3>
            <p class="plot-container"><%= movie.plot %></p>
            <p><a href="/watch/<%= movie.id %>" class="btn btn-primary" >Details</a></p>
            <%= link_to "Movie Deets", watch_path(movie.id) %>

            <!-- attempt to render _test partial -->
            <%= render "test", :params => { @show_partial = true } %>
          </div>
        </div>
      </div>

  <% end %>
</div>
