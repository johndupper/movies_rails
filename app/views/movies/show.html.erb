<div class="row">
  <div class="col-sm-6 col-md-6">
     <div class="thumbnail">
       <img src="<%= @movie.poster %>" alt="">
       <div class="caption">
         <h3><%= @movie.title %> <small><%= @movie.year %></small></h3>
         <p class="plot-container"><%= @movie.plot %></p>
         <p><a href="/movies" class="btn btn-primary" role="button">All Favorites</a>
           <a href="/movies/remove/<%= @movie.id %>" class="btn btn-danger" role="button">Remove from Favorites</a></p>
       </div>
     </div>
  </div>
</div>
