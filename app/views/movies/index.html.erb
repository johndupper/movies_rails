<div class="row">
  <div class="col-sm-6 col-md-4">
    <% @movies.each do |movie| %>
    <div class="thumbnail">
      <img src="<%= movie.poster %>" alt="">
      <div class="caption">
        <h3><%= movie.title %> <small><%= movie.year %></small></h3>
        <p><%= movie.plot %></p>
        <p><a href="/movies/<%= movie.id %>" class="btn btn-primary" role="button">Details</a></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
