<div class="row">
  <% @movies.each do |movie| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= movie.poster %>" alt="">
          <div class="caption">
            <h3><%= movie.title %> <small><%= movie.year %></small></h3>
            <p class="plot-container"><%= movie.plot %></p>
            <p><a href="/movies/<%= movie.id %>" class="btn btn-primary" role="button">View Details</a>
              <a href="/movies/remove/<%= movie.id %>" class="btn btn-danger" role="button">Remove</a></p>
          </div>
        </div>
      </div>
  <% end %>
</div>
